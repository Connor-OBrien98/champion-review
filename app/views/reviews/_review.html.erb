<p><%= review.rating %></p>
<p><%= NoProfanity.check(review.comment) %></p>

<% if user_signed_in? %>

    <% if review.user_id == current_user.id %>

        <%= link_to "Edit", edit_champion_review_path(review.champion, review) %>
        <%= link_to "Delete", champion_review_path(review.champion, review), method: :delete,
        data: { confirm: "Are you sure?" } %>
    
    <% end %>

<% end %>